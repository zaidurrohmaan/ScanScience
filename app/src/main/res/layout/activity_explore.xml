<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.explore.ExploreActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ll_action_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:src="@drawable/sc_logo2"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_action_bar"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="@string/eksplorasi"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/navy"
            android:textSize="32sp"
            android:visibility="visible"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_fakta_sains"
            app:layout_constraintTop_toBottomOf="@id/tv_explore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="@string/fakta_sains"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:background="@drawable/custom_btn_white"
            android:textColor="@color/navy"
            android:drawableStart="@drawable/ic_atom_01"
            android:drawablePadding="20dp"
            android:paddingStart="12dp"
            android:paddingEnd="6dp"
            android:gravity="left|center_vertical"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_experiment"
            app:layout_constraintTop_toBottomOf="@id/btn_fakta_sains"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="Eksperimen Sains"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:background="@drawable/custom_btn_white"
            android:textColor="@color/navy"
            android:drawableStart="@drawable/ic_experiment"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="6dp"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update"
            app:layout_constraintTop_toBottomOf="@id/btn_experiment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="Sains Terkini"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:background="@drawable/custom_btn_white"
            android:textColor="@color/navy"
            android:drawableStart="@drawable/ic_globe_slated_02"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="6dp"
            android:textAllCaps="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>